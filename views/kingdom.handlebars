<h1>{{title}}</h1>

<form action="/kingdoms/{{title}}" method="post">

	<label for="castle">Castle</label>
	<input type="text" name="castle">

	<button>Submit</button>
</form>

<h3>King: {{king}}</h3>
<h3>Queen: {{queen}}</h3>

<ul>
{{#each data as |item|}}
	<a href="{{../currentPath}}/{{../nextPath}}/{{item}}"><li>{{item}}</li></a>
{{/each}}
</ul>